<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kimvan.hung.calculator.basic.BasicKeyboardFragment"
    tools:showIn="@layout/basic_keyboard_fragment">

    <LinearLayout
        android:layout_column="3"
        android:layout_row="3">
        <Button
            android:id="@+id/open_parenthesis_button"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:background="@drawable/open_premis_symbols" />

        <Button
            android:id="@+id/close_parenthesis_button"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:background="@drawable/close_premis_symbols" />
    </LinearLayout>

    <Button
        android:id="@+id/clear_all"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_marginBottom="0dp"
        android:layout_row="0"
        android:background="@drawable/clear_all" />

    <Button
        android:id="@+id/divide_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/divide_symbol" />

    <Button
        android:id="@+id/multi_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@drawable/multilition_symbol" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="3"
        android:layout_row="0"
        android:background="@drawable/clear_symbols" />

    <Button
        android:id="@+id/seven_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@drawable/seven_symbol" />

    <Button
        android:id="@+id/eight_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/eight_symbol" />

    <Button
        android:id="@+id/nine_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/nine_symbol" />

    <Button
        android:id="@+id/subtract_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@drawable/sbtract_symbol" />

    <Button
        android:id="@+id/four_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@drawable/four_symbol" />

    <Button
        android:id="@+id/five_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@drawable/five_symbol" />

    <Button
        android:id="@+id/six_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@drawable/six_symbol" />

    <Button
        android:id="@+id/sum_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="3"
        android:layout_row="2"
        android:background="@drawable/add_symbols" />

    <Button
        android:id="@+id/one_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_row="3"
        android:background="@drawable/one_symbol" />

    <Button
        android:id="@+id/two_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@drawable/two_symbol" />

    <Button
        android:id="@+id/three_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@drawable/three_symbol" />


    <Button
        android:id="@+id/zero_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_row="4"
        android:background="@drawable/zero_symbol" />

    <Button
        android:id="@+id/point_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="4"
        android:background="@drawable/point_symbol" />

    <Button
        android:id="@+id/signal_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="4"
        android:background="@drawable/signal_symbol" />

    <Button
        android:id="@+id/equal_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_column="3"
        android:layout_row="4"
        android:background="@drawable/equals_symbol" />









</GridLayout>
